<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome"
    android:orientation="vertical"
android:background="@drawable/origback"
    >
    <ImageView
        android:id="@+id/img_signup_welcome"
        android:layout_width="136dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="145dp"
        android:clickable="true"
        app:srcCompat="@drawable/newlogo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:textStyle="bold"
        android:layout_marginTop="25sp"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:text="مستقبل کا شہر"
        android:textColor="#F80505"
        />

    <Button
        android:id="@+id/btn_guest_welcome"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:background="#F10D0D"
        android:gravity="center"
        android:text="CONTINUE AS GUEST"
        android:textColor="#ffffff"
        android:onClick="onClick"
        android:focusable="true"
        app:backgroundTint="#FA0505" />

<Button
        android:id="@+id/btn_login_welcome"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:onClick="onClick"
        android:text="CONTINUE TO LOGIN"
       app:backgroundTint="?android:attr/windowBackground" />

</LinearLayout>