<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contact"
    android:orientation="vertical"
    android:background="@drawable/newandupdateback"
    >

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomnav_visitor2"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/bottom_nav"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:id="@+id/img_logo_contact"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:clickable="true"
        app:srcCompat="@drawable/newlogo"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/txt_contacthead"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:text="Contact with us"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FD0202"
        android:layout_below="@+id/img_logo_contact"
        android:layout_marginTop="45sp"
        />
    <TextView
        android:id="@+id/txt_siteoffice"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:text="Site Office:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/txt_contacthead"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/txt_officeaddr"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:text="Near PAC Gate # 02, Qutba Main G.T Road, District Attock, Kamra, Pakistan"
        android:textSize="15sp"
        android:layout_below="@+id/txt_siteoffice"
        android:layout_marginTop="10sp"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/txt_headquter"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:text="Headquarters:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/txt_officeaddr"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/txt_headquarteraddr"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:text="Directorate of Estate Projects Air Headquarters, Islamabad, Pakistan"
        android:textSize="15sp"
        android:layout_below="@+id/txt_headquter"
        android:layout_marginTop="10sp"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/txt_numberhead"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:text="Phone:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/txt_headquarteraddr"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/txt_phonenum"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:text="Phone Number: (057) 2640606"
        android:textSize="15sp"
        android:layout_below="@+id/txt_numberhead"
        android:layout_marginTop="10sp"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/txt_emailhead"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:text="E-Mail"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/txt_phonenum"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:text="Support: aviationcity@fhs-kamra.pk"
        android:textSize="15sp"
        android:layout_below="@+id/txt_emailhead"
        android:layout_marginTop="10sp"
        android:textColor="#000000"
        />
</RelativeLayout>