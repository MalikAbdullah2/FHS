<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".complaint"
    android:orientation="vertical"
    android:background="@drawable/newandupdateback"
    >
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomnav_visitor2"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/bottom_nav"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:id="@+id/img_signup_welcome"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:clickable="true"
        app:srcCompat="@drawable/newlogo"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/edt_name_complaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:hint="Name"
        android:outlineProvider="paddedBounds"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/img_signup_welcome"
        />
    <EditText
        android:id="@+id/edt_departement_complaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Branch"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/edt_name_complaint"
        />
    <EditText
        android:clickable="true"
        android:id="@+id/edt_number_complaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact Number"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:inputType="number"
        android:layout_below="@+id/edt_departement_complaint"
        />
    <EditText
        android:clickable="true"
        android:id="@+id/edt_detail_complaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Complain Discription"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/edt_number_complaint"
        />

    <Button
        android:id="@+id/btn_submit_complaint"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:onClick="onClick"
        android:text="SUBMIT"
        app:backgroundTint="?android:attr/windowBackground"
        android:layout_below="@id/edt_detail_complaint"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>